<h2>User info</h2>
<%= form_with model: @user do |f| %>

  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%><br>

  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>


  <label for="introduction">Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"introduction", placeholder:""%><br>


  <%= f.submit "Update User" %><br>
<% end %>